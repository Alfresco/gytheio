<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hashRequestReplyMessageProducer" parent="baseHashRequestProducer" init-method="init">
        <property name="endpoint"
            value="direct:alfresco.hash.request" />
    </bean>

    <bean id="hashService"
        class="org.alfresco.repo.content.hash.HashServiceMessagingImpl"
        init-method="init">
        <property name="contentService">
            <ref bean="contentService" />
        </property>
        <property name="policyComponent">
            <ref bean="policyComponent" />
        </property>
        <property name="contentTransport">
            <ref bean="tempFileContentTransport" />
        </property>
        <property name="requestReplyMessageProducer">
            <ref bean="hashRequestReplyMessageProducer" />
        </property>
    </bean>

</beans>